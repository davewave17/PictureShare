@model IEnumerable<PictureShare.Models.PictureModel>

@{
    ViewData["Title"] = "Index";
}


<div class="container-fluid">
    <div class="row">
        <form asp-action="Index">
            <input type="text" name="SearchBy" id="form1" class="form-control" />
            <label class="form-label" for="form1">Search</label>
        </form>
    </div>
    <button type="submit" class="btn btn-primary" id="btn-search">
        <i class="fas fa-search"></i>
    </button>
   
</div>

<div class="container-fluid">
    <div class="row">

        @foreach (var picture in Model)
        {
            <div class="col">
                <div class="item">
                    <div class="polaroid">
                        <img src="@picture.ImagePath">
                        <div class="caption">@picture.Caption</div>
                    </div>
                </div>

            </div>
        }

    </div>
</div>


<div class="card">
    <p>
        <a class="btn btn-primary" asp-action="Create">Create New</a>
    </p>

    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.UserEmail)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ImagePath)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Caption)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserEmail)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ImagePath)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Caption)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>
