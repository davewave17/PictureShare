@model PictureShare.Models.LoginViewModel

@{
    ViewData["Title"] = "Login Page";
}


<div id="home-main" class="m-0 p-0">
    <div class="d-flex flex-column justify-content-center align-items-center vh-85">
        <div class="card w-25 position-fixed br-0 shadow">
            <div class="card-body">

                <div class="container p-0">

                    <div class="row mb-3">
                        <div class="col-md text-center">
                            <h1>PictureShare</h1>
                        </div>
                    </div>
                    <form asp-action="Login" method="post" class="mb-3">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-floating mb-3">
                            <input asp-for="@Model.Email" type="email" class="form-control br-0" id="frm-email" placeholder="name@email.com" />
                            <label asp-for="@Model.Email" for="frm-email">Email Address</label>
                            <span asp-validation-for="@Model.Email" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="@Model.Password" type="password" class="form-control br-0" id="frm-pw" placeholder="password" />
                            <label asp-for="@Model.Password" for="frm-pw">Password</label>
                            <span asp-validation-for="@Model.Password" class="text-danger"></span>
                        </div>

                        <button class="btn btn-dark text-light w-100 br-0" type="submit">Login</button>
                    </form>

                    <a class="btn btn-outline-dark w-100 br-0" asp-area="Identity" asp-page="/Account/Register">Register?</a>

                </div>

            </div>
        </div>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
