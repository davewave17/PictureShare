@model IEnumerable<PictureShare.Models.PictureModel>

@{
    ViewData["Title"] = "Index";
}


<div class="container-fluid">
    <div class="row">
        <form method="get">
            <div class="col-6 mt-5">
                <div class="input-group">
                    <input type="text" name="SearchBy" class="form-control" placeholder="Search" aria-label="Search" aria-describedby="btn-search">
                    <button class="btn btn-dark" type="submit" id="btn-search"><i class="bi bi-search"></i></button>
                </div>
            </div>
        </form>

        <div class="row p-2">
            <div class="col-md-3">
                <a asp-route-SortBy="captionAZ" asp-route-SearchBy="@ViewData["Search"]" class="btn btn-dark w-100 mx-2" id="btn-sort-captionAZ">Sort by Caption ( A - Z )</a>
            </div>

            <div class="col-md-3">
                <a asp-route-SortBy="captionZA" asp-route-SearchBy="@ViewData["Search"]" class="btn btn-dark w-100 mx-2" id="btn-sort-captionZA">Sort by Caption ( Z - A )</a>
            </div>

            <div class="col-md-3">
                <a asp-route-SortBy="userAZ" asp-route-SearchBy="@ViewData["Search"]" class="btn btn-dark w-100 mx-2" id="btn-sort-userAZ">Sort by User ( A - Z )</a>
            </div>

            <div class="col-md-3">
                <a asp-route-SortBy="userZA" asp-route-SearchBy="@ViewData["Search"]" class="btn btn-dark w-100 mx-2" id="btn-sort-userZA">Sort by User ( Z - A )</a>
            </div>



        </div>

    

    <div class="row">

        @foreach (var picture in Model)
        {
            <div class="col-md-4">
                <a asp-controller="Pictures" asp-action="Details" asp-route-id="@picture.Id">
                    <div class="item">
                        <div class="polaroid text-center">
                            <img src="@picture.ImagePath">
                            <div class="caption">@picture.Caption</div>
                            <div class="text-muted">@picture.UserEmail</div>
                            <div class="text-muted">@picture.Category.Name</div>

                        </div>
                    </div>
                </a>
            </div>
        }

    </div>
</div>
</div>